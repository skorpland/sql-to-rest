{
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts",
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "ES6",
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true
  }
}